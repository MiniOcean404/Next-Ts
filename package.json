{
  "name": "forum",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": ">=16.14.1"
  },
  "scripts": {
    "dev": "next dev",
    "proxy-dev": "node script/cross-domain-proxy.js",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "commit": "cz",
    "clean": "rimraf node_modules &&  yarn cache clean",
    "prettier-format": "prettier --write  **/*.{scss,css} **/*.{jsx,tsx,js,ts}",
    "eslint-fix": "eslint --ext .tsx --ext .ts  pages/*/** --fix",
    "prepare-husky": "yarn husky install"
  },
  "dependencies": {
    "antd": "^4.20.2",
    "axios": "^0.27.2",
    "next": "12.1.5",
    "react": "18.0.0",
    "react-dom": "18.0.0",
    "sass": "^1.50.0"
  },
  "devDependencies": {
    "@types/node": "17.0.24",
    "@types/react": "18.0.5",
    "@types/react-dom": "18.0.1",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "chalk": "^4.1.2",
    "commitizen": "^4.2.4",
    "cz-customizable": "^6.3.0",
    "eslint": "8.13.0",
    "eslint-config-next": "12.1.5",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.5.0",
    "express": "^4.18.1",
    "http-proxy-middleware": "^2.0.6",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.8",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "typescript": "4.6.3"
  },
  "volta": {
    "node": "16.14.1",
    "yarn": "1.22.18"
  },
  "lint-staged": {
    "*.{css,scss}": [
      "yarn prettier-format",
      "git add ."
    ],
    "*.ts?(x)": [
      "yarn prettier-format",
      "eslint --fix",
      "git add ."
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    }
  }
}
